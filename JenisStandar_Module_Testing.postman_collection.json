              "});",
              "",
              "pm.test('Response has success status', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.status).to.be('success');",
              "    pm.expect(responseJson.responseCode).to.be(200);",
              "    pm.expect(responseJson.data).to.have.property('items');",
              "    pm.expect(responseJson.data).to.have.property('total');",
              "    pm.expect(responseJson.data).to.have.property('page');",
              "    pm.expect(responseJson.data).to.have.property('amount');",
              "    pm.expect(responseJson.data.items).to.be.an('array');",
              "});",
              "",
              "// Log total count for reference",
              "const responseJson = pm.response.json();",
              "pm.test(`Found ${responseJson.data.total} total records`, function () {",
              "    pm.expect(responseJson.data.total).to.be.at.least(0);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
