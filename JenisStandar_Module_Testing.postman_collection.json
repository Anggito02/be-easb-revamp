{
  "info": {
    "name": "JenisStandar Module Testing",
    "description": "Complete testing collection for jenis_standar module with all CRUD operations",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:3000"
    },
    {
      "key": "auth_token",
      "value": "YOUR_SUPERADMIN_JWT_TOKEN_HERE"
    }
  ],
  "item": [
    {
      "name": "Create Jenis Standar",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jenis\": \"TEST_STANDAR\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/jenis-standar",
          "host": [
            "{{base_url}}"
          ],
          "path": [
            "jenis-standar"
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test('Status code is 201', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test('Response has success status', function () {",
              "    const responseJson = pm.response.json();",
              "    pm.expect(responseJson.status).to.be('success');",
              "    pm.expect(responseJson.responseCode).to.be(201);",
              "    pm.expect(responseJson.data).to.have.property('id');",
              "    pm.expect(responseJson.data).to.have.property('jenis');",
              "});",
              "",
              "// Store created ID for later tests",
              "if (pm.response.json().data) {",
              "    pm.environment.set('created_jenis_standar_id', pm.response.json().data.id);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
