{
	"info": {
		"_postman_id": "asb-module-collection",
		"name": "ASB Module API Collection",
		"description": "Comprehensive API collection for ASB (Analisis Standar Biaya) module including all endpoints for ASB management, verification, and related entities",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "ASB",
			"item": [
				{
					"name": "Get All ASB",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/asb?page=1&amount=10",
							"host": ["{{base_url}}"],
							"path": ["asb"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "amount",
									"value": "10"
								},
								{
									"key": "search",
									"value": "",
									"disabled": true
								}
							]
						},
						"description": "Get all ASB with pagination. Requires OPD, ADMIN, or SUPERADMIN role."
					},
					"response": []
				}
			],
			"description": "Main ASB endpoints for managing ASB entries"
		},
		{
			"name": "ASB Document",
			"item": [
				{
					"name": "Get All Documents",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/asb-document?page=1&amount=10",
							"host": ["{{base_url}}"],
							"path": ["asb-document"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "amount",
									"value": "10"
								}
							]
						},
						"description": "Get all ASB documents with pagination. Requires SUPERADMIN role."
					},
					"response": []
				},
				{
					"name": "Download All Documents by ASB (ZIP)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/asb-document/download-all-by-asb?idAsb=1",
							"host": ["{{base_url}}"],
							"path": ["asb-document", "download-all-by-asb"],
							"query": [
								{
									"key": "idAsb",
									"value": "1",
									"description": "ID of the ASB to download all documents for"
								}
							]
						},
						"description": "Download all documents for a specific ASB as a ZIP file. Requires SUPERADMIN role."
					},
					"response": []
				},
				{
					"name": "Download Surat Permohonan",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/asb-document/download-surat-permohonan?idAsb=1",
							"host": ["{{base_url}}"],
							"path": ["asb-document", "download-surat-permohonan"],
							"query": [
								{
									"key": "idAsb",
									"value": "1",
									"description": "ID of the ASB to download surat permohonan for"
								}
							]
						},
						"description": "Download Surat Permohonan PDF file for a specific ASB. Requires SUPERADMIN role."
					},
					"response": []
				},
				{
					"name": "Download Kertas Kerja",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{base_url}}/asb-document/download-kertas-kerja?idAsb=1",
							"host": ["{{base_url}}"],
							"path": ["asb-document", "download-kertas-kerja"],
							"query": [
								{
									"key": "idAsb",
									"value": "1",
									"description": "ID of the ASB to download kertas kerja for"
								}
							]
						},
						"description": "Download Kertas Kerja PDF file for a specific ASB. Requires SUPERADMIN role."
					},
					"response": []
				}
			],
			"description": "Endpoints for managing ASB documents (uploads, updates, deletions, and downloads)"
		}
	]
}
