		{
			"name": "Get Documents by ASB",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/asb-document/by-asb?idAsb=1&page=1&amount=10",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"asb-document",
						"by-asb"
					],
					"query": [
						{
							"key": "idAsb",
							"value": "1",
							"description": "ID of the ASB"
						},
						{
							"key": "page",
							"value": "1",
							"description": "Page number"
						},
						{
							"key": "amount",
							"value": "10",
							"description": "Items per page"
						}
					]
				}
			},
			"response": []
		},
		{
			"name": "Get Documents by Spec",
			"request": {
				"method": "GET",
				"header": [],
