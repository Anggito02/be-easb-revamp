{
	"info": {
		"_postman_id": "user-module-api-collection",
		"name": "EASB - User Module API",
		"description": "Complete API collection for User Module endpoints including authentication, CRUD operations, and role-based access control.",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "User Management (Superadmin)",
			"item": [
				{
					"name": "Create User",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for SUPERADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password123\",\n  \"roles\": [\"guest\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/create",
							"host": ["{{base_url}}"],
							"path": ["users", "create"]
						},
						"description": "Create a new user (SUPERADMIN only). Can assign any role."
					},
					"response": []
				},
				{
					"name": "Update User",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for SUPERADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 1,\n  \"username\": \"updateduser\",\n  \"password\": \"newpassword123\",\n  \"roles\": [\"admin\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/update",
							"host": ["{{base_url}}"],
							"path": ["users", "update"]
						},
						"description": "Update user details (SUPERADMIN only). All fields except id are optional."
					},
					"response": []
				},
				{
					"name": "Delete User",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for SUPERADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/delete",
							"host": ["{{base_url}}"],
							"path": ["users", "delete"]
						},
						"description": "Soft delete a user (SUPERADMIN only)."
					},
					"response": []
				}
			],
			"description": "Endpoints that require SUPERADMIN role"
		},
		{
			"name": "User Management (Admin)",
			"item": [
				{
					"name": "Create User By Admin",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for ADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"newuser\",\n  \"password\": \"password123\",\n  \"roles\": [\"verifikator\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/admin/create",
							"host": ["{{base_url}}"],
							"path": ["users", "admin", "create"]
						},
						"description": "Create a new user (ADMIN only). Can only assign: verifikator, opd, guest roles."
					},
					"response": []
				},
				{
					"name": "Update User By Admin",
					"request": {
						"method": "PATCH",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for ADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 2,\n  \"username\": \"updateduser\",\n  \"password\": \"newpassword123\",\n  \"roles\": [\"opd\"]\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/admin/update",
							"host": ["{{base_url}}"],
							"path": ["users", "admin", "update"]
						},
						"description": "Update user details (ADMIN only). Cannot update SUPERADMIN or ADMIN users. Can only assign: verifikator, opd, guest roles."
					},
					"response": []
				},
				{
					"name": "Delete User By Admin",
					"request": {
						"method": "DELETE",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for ADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 2\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/admin/delete",
							"host": ["{{base_url}}"],
							"path": ["users", "admin", "delete"]
						},
						"description": "Soft delete a user (ADMIN only). Cannot delete SUPERADMIN or ADMIN users."
					},
					"response": []
				}
			],
			"description": "Endpoints that require ADMIN role (restricted from managing SUPERADMIN/ADMIN users)"
		},
		{
			"name": "User Queries",
			"item": [
				{
					"name": "Get Users List",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for SUPERADMIN or ADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"page\": 1,\n  \"amount\": 10\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/list",
							"host": ["{{base_url}}"],
							"path": ["users", "list"]
						},
						"description": "Get paginated list of users (SUPERADMIN or ADMIN). Returns users without passwordHash. Superadmin users are filtered out."
					},
					"response": []
				},
				{
					"name": "Get User Detail",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{access_token}}",
								"description": "JWT token for SUPERADMIN or ADMIN role"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"id\": 1\n}"
						},
						"url": {
							"raw": "{{base_url}}/users/detail",
							"host": ["{{base_url}}"],
							"path": ["users", "detail"]
						},
						"description": "Get detailed information for a specific user (SUPERADMIN or ADMIN). Returns user without passwordHash. Cannot access SUPERADMIN user details."
					},
					"response": []
				}
			],
			"description": "Query endpoints for retrieving user information"
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000",
			"type": "string",
			"description": "Base URL for the API server"
		},
		{
			"key": "access_token",
			"value": "",
			"type": "string",
			"description": "JWT access token obtained from login"
		}
	]
}
