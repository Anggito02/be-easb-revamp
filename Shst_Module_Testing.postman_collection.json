{
	"info": {
		"name": "SHST Module Testing",
		"description": "Collection for testing SHST (Standar HargaSatuan) module endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "1. Upload SHST File",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "formdata",
					"formdata": [
						{
							"key": "tahun",
							"value": "2024",
							"type": "text"
						},
						{
							"key": "id_asb_tipe_bangunan",
							"value": "1",
							"type": "text"
						},
						{
							"key": "id_asb_klasifikasi",
							"value": "1",
							"type": "text"
						},
						{
							"key": "id_kabkota",
							"value": "1",
							"type": "text"
						},
						{
							"key": "nominal",
							"value": "1500000",
							"type": "text"
						},
						{
							"key": "file",
							"type": "file",
							"src": []
						}
					]
				},
				"url": {
					"raw": "{{base_url}}/shst",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 201', function () {",
							"    pm.response.to.have.status(201);",
							"});",
							"",
							"pm.test('Response contains success status', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.status).to.be.oneOf(['success']);",
							"    pm.expect(responseJson.responseCode).to.be.a('number');",
							"    pm.expect(responseJson.message).to.be.a('string');",
							"});",
							"",
							"pm.test('Response contains SHST data', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.data).to.be.an('object');",
							"    pm.expect(responseJson.data.id).to.be.a('number');",
							"    pm.expect(responseJson.data.tahun).to.be.a('number');",
							"    pm.expect(responseJson.data.nominal).to.be.a('number');",
							"    pm.expect(responseJson.data.file).to.be.a('string');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "2. Get All SHST",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shst",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains success status', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.status).to.be.oneOf(['success']);",
							"    pm.expect(responseJson.data).to.be.an('object');",
							"    pm.expect(responseJson.data.data).to.be.an('array');",
							"    pm.expect(responseJson.data.total).to.be.a('number');",
							"    pm.expect(responseJson.data.page).to.be.a('number');",
							"    pm.expect(responseJson.data.amount).to.be.a('number');",
							"    pm.expect(responseJson.data.totalPages).to.be.a('number');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "3. Get SHST Detail",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shst/detail",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst",
						"detail"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains SHST detail', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.data).to.be.an('object');",
							"    pm.expect(responseJson.data.id).to.be.a('number');",
							"    pm.expect(responseJson.data.tahun).to.be.a('number');",
							"    pm.expect(responseJson.data.nominal).to.be.a('number');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "4. Get File Path",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/shst/file",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst",
						"file"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains file path', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.data.filePath).to.be.a('string');",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "5. Update Nominal SHST",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": 1,\n    \"nominal\": 2000000\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/shst",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response contains updated nominal', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.data.nominal).to.be.a('number');",
							"    pm.expect(responseJson.data.nominal).to.be.equal(2000000);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		},
		{
			"name": "6. Delete SHST",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n    \"id\": 1\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "{{base_url}}/shst",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"shst"
					]
				}
			},
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test('Status code is 200', function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test('Response indicates successful deletion', function () {",
							"    const responseJson = pm.response.json();",
							"    pm.expect(responseJson.data).to.be.true;",
							"});"
						],
						"type": "text/javascript"
					}
				}
			]
		}
	],
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					"",
					"// Environment variables setup",
					"if (!pm.environment.get('base_url')) {",
					"    pm.environment.set('base_url', 'http://localhost:3000');",
					"}",
					"",
					"// Set auth token if not exists",
					"if (!pm.environment.get('auth_token')) {",
					"    // This should be set after running the auth/login endpoint",
					"    console.log('Please set auth_token environment variable');",
					"}"
				]
			}
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:3000/api/dev/v1"
		}
	]
}
